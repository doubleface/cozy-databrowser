// VARIABLES
basecolor = #34A6FF
contrastcolor = #5C5
actioncolor = #fe8800
bgcolor = #F5F5F5

// ELEMENTS

html
  min-height: 100%
  position: relative

body
  padding-bottom: 0
  //background-color: #e4e6e9
  min-height: 100%
  //font-family: 'Open Sans'
  font-size: 13px
  //color: #393939
  //line-height: 1.5

// CLASS
#sidebar
  z-index:20

.current-title
  margin: 0 0 12px
  border-bottom: 1px dotted #e2e2e2
  padding-bottom: 16px
  padding-top: 7px

.current-title h1
  padding: 0
  margin: 0 8px
  font-size: 24px

.panel-title
  position: relative

.result-buttons
  position: absolute
  top:0
  right:0
  margin:5px

.btn-xs > [class*="icon-"], .btn-minier > [class*="icon-"]
  margin-right:0

.page-content
  padding-top : 10px

#results-meta-infos
  margin-bottom:10px
  display:none

.load-more-result
  margin:auto
  text-align:center
  display:none

#btn-scroll-up
  position: fixed
  bottom:0
  right:0
  display:none

.md-desc-container
  float:left
  margin-left:2%

.md-desc-container ul, .md-desc-container li
  list-style-type:none

.clear
  float:none
  clear:both
  display:block
  width:100%
  height:1px
  line-height:1px

.loading-image, .loading-image img
  margin:auto
  text-align:center

.firstLetterUp
  text-transform: capitalize

.profile-info-row
  min-height 31px
  height 100%
  clear both

.profile-info-name
  position static
  float left
  top auto
  left auto
  bottom auto
  right auto
  width 180px
  padding-right 5px !important

.profile-info-value
  margin-left:180px

.menu-toggler
  right:0 !important
  left:auto !important

.menu-toggler:after, .menu-toggler:before
  border:none !important


.menu-toggler > .menu-text::after
  left:-18px !important



@media only screen and (max-width: 991px)
  .sidebar
    right:0 !important
    left:auto !important

#launch-search, .about-doctype, #close-about-doctype, .view-switcher
  cursor:pointer

.white-and-green
  color: rgb(130, 175, 111)
  border-color: bgcolor

.menu-little-text
  font-size:0.8em
  color: #000

.sidebar
  width: 200px
.sidebar:before
  width: 200px

.main-content
  margin-left: 200px

.modal-confirm-text
  color : #d9534f
  font-weight:bold


.page-header
  margin-top : 0

#result-view-as-table
  th
    text-align center
    .sorting-disable
      color #aaa

  td.action
    text-align center
